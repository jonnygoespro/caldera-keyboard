#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

#include "../zmk-nodefree-config/helper.h"
#include "../zmk-nodefree-config/international_chars/german.dtsi"

/ {
        keymap {
                compatible = "zmk,keymap";

                default_layer {
// ---------------------------------------------------------------------------------
// | ESC  |  1  |  2  |  3  |  4  |  5  |     |  6  |  7  |  8  |  9  |  0  |      |
// | TAB  |  Q  |  W  |  E  |  R  |  T  |     |  Y  |  U  |  I  |  O  |  P  | BKSP |
// | CAPS |  A  |  S  |  D  |  F  |  G  |     |  H  |  J  |  K  |  L  |  Ö  |  ENT |
// | SHFT |  Z  |  X  |  C  |  V  |  B  |     |  N  |  M  |  ,  |  .  |  -  | SHFT |
// |      |     |CTRL | ALT | GUI | SPC |     | SPC | LOW |LARW |DARW |UARW | RARW |
                        bindings = <
   &kp ESC      &kp N1    &kp N2     &kp N3     &kp N4     &kp N5               &kp N6     &kp N7  &kp N8     &kp N9    &kp N0     &none
   &kp TAB      &kp Q     &kp W      &kp E      &kp R      &kp T                &kp Y      &kp U   &kp I      &kp O     &kp P      &kp BSPC
   &kp CAPS     &kp A     &kp S      &kp D      &kp F      &kp G                &kp H      &kp J   &kp K      &kp L     &none      &kp RET
   &kp LSHFT    &kp Z     &kp X      &kp C      &kp V      &kp B                &kp N      &kp M   &kp COMMA  &kp DOT   &kp MINUS  &kp RSHFT
   &none        &none     &kp LCTRL  &kp LALT   &kp LGUI   &kp SPACE            &kp SPACE  &mo 1   &kp LEFT   &kp DOWN  &kp UP     &kp RIGHT
                        >;
                };
                lower_layer {
// ------------------------------------------------------------------------------------------------------------
// | ESC   |  BT1  |  BT2  |  BT3  |  BT4  |  BT5  |          |       |       |       |       |       |  BTCLR|
// |       |   !   |   "   |   #   |   $   |   @   |          |   ^   |   %   | BSP   |   '   |   ?   |  BKSP |
// |   ß   |   <   |   [   |   (   |   {   |   :   |          |   ;   |   }   |   )   |   ]   |   >   |  ENT  |
// | SHFT  |   Ü   |   |   |   *   |   +   |   ~   |          |   =   |   -   |   ,   |   .   |   Ä   |  SHFT |
// |       |       |       |       |       |       |          |       |       |       |       |       |       |
                        bindings = <
   &kp ESC    &bt BT_SEL 0  &bt BT_SEL 1  &bt BT_SEL 2  &bt BT_SEL 3  &bt BT_SEL 4           &none      &none       &none      &none     &none      &bt BT_CLR
   &none      &kp EXCL      &kp DQT       &kp HASH      &kp DLR       &kp AT                 &kp CARET  &kp PERC    &kp SLSH   &kp QUOT  &kp QMARK  &none
   &none      &kp LT        &kp LBKT      &none         &kp LBRACE    &kp COLON              &kp SEMI   &kp RBRACE  &none      &kp RBKT  &kp GT     &kp RET
   &kp LSHFT  &none         &kp PIPE      &kp ASTRK     &kp PLUS      &kp TILDE              &kp EQUAL  &kp MINUS   &kp COMMA  &kp DOT   &none      &kp RSHFT
   &none      &none         &none         &none         &none         &none                  &none      &none       &none      &none     &none      &none
                        >;
                };
        };
};